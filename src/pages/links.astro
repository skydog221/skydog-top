<!-- 当前代码改编自 https://github.com/Pinpe/Pinpe-top -->

---
// ---------- 链接数据 ----------
type LinkItem = {
	title: string;
	link: string;
	desc: string;
	img: string;
};

const links: LinkItem[] = [
	{
		link: "https://pinpe.top",
		title: "Pinpe的云端",
		img: "https://pinpe.top/favicon/logo.png",
		desc: "一个属于自己的云朵",
	},
];
const randomLinks = [...links].sort(() => Math.random() - 0.5);
---

<!-- 页面渲染部分 -->
<div class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-8 my-4">
  {randomLinks.map((link) => (
    <div class="flex flex-nowrap items-stretch h-28 gap-4 rounded-[var(--radius-large)] bg-[var(--card-bg)] hover:bg-[var(--card-bg-hover)] transition-colors p-4">
      <div class="w-28 h-28 flex-shrink-0 rounded-lg overflow-hidden bg-zinc-200 dark:bg-zinc-900">
        {link.img && (
          <img
            src={link.img}
            alt={link.title}
            class="w-full h-full object-cover"
            loading="lazy"
          />
        )}
      </div>
      <div class="grow w-full flex flex-col justify-center">
        <div class="font-bold transition text-lg text-neutral-900 dark:text-neutral-100 mb-1">
          {link.title}
        </div>
        <div class="text-neutral-600 dark:text-neutral-400 text-sm font-medium">
          {link.desc}
        </div>
      </div>
      <a
        href={link.link}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center w-[3.25rem] rounded-lg bg-[var(--btn-bg)] hover:bg-[var(--btn-bg-hover)] active:bg-[var(--btn-bg-active)] active:scale-95 transition-all"
        aria-label={`访问 ${link.title}`}
      >
        <svg class="w-8 h-8 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  ))}
</div>

<style>
  :root {
    --card-bg: #fff;
    --card-bg-hover: rgba(255, 255, 255, 0.7);
    --btn-bg: rgba(0, 0, 0, 0.05);
    --btn-bg-hover: rgba(0, 0, 0, 0.1);
    --btn-bg-active: rgba(0, 0, 0, 0.15);
  }

  :root.dark {
    --card-bg: #000;
    --card-bg-hover: rgba(0, 0, 0, 0.3);
    --btn-bg: rgba(255, 255, 255, 0.05);
    --btn-bg-hover: rgba(255, 255, 255, 0.1);
    --btn-bg-active: rgba(255, 255, 255, 0.15);
  }
</style>
